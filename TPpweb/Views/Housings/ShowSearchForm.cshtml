<h4 class="text-center">Search</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="ShowSearchResults" method="get">
            <div class="form-group">
                <label for="SearchWord" class="control-label">Palavra-chave</label>
                <input name="SearchWord" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Location" class="control-label">Localização</label>
                <input name="Location" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Type" class="control-label">Tipo</label>
                <select name="Type" class="form-control">
                    <option value="">-- Selecione --</option>
                    <option value="Casa">Casa</option>
                    <option value="Apartamento">Apartamento</option>
                    <option value="Quarto">Quarto</option>
                </select>
            </div>
            <div class="form-group">
                <label for="StartDate" class="control-label">Data de Início</label>
                <input type="date" name="StartDate" class="form-control" />
            </div>
            <div class="form-group">
                <label for="EndDate" class="control-label">Data de Fim</label>
                <input type="date" name="EndDate" class="form-control" />
            </div>
            <div class="form-group">
                <label for="LandlordName" class="control-label">Nome do Locador</label>
                <input name="LandlordName" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Realizar Busca" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index">Back to List</a>
</div>
