@model TPpweb.Models.Employer

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="role" value="@ViewBag.role" />
            @if (User.IsInRole("Administrador") || User.IsInRole("Gestor"))
            {
                <input type="hidden" asp-for="PersonId" value="@ViewBag.PersonId" />
            }
            else
            {
                <div class="form-group">
                    <label asp-for="PersonId" class="control-label"></label>
                    <select asp-for="PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
                </div>
            }

            <div class="form-group">
                <label asp-for="LandlordId" class="control-label"></label>
                <select asp-for="LandlordId" class ="form-control" asp-items="ViewBag.LandlordId"></select>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

